@page "/"
@inject IJSRuntime JSRuntime
@inject IJSRuntime JS
@using Reporteria.Services


<h1 class="text-center mt-4 mb-4 fs-4">Reportes</h1>

<!-- Primera fila -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="accordion" id="accordionColumn1">
            <!-- Acordeón 1 -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button @(IsSectionActive(1) ? "" : "collapsed")" type="button" @onclick="() => ToggleSection(1)" aria-expanded="@(IsSectionActive(1))" aria-controls="collapseOne">
                        (Credencial OS)
                    </button>
                </h2>
                @if (IsSectionActive(1))
                {
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionColumn1">
                        <div class="accordion-body border p-3">
                            <input type="text" class="form-control mb-2" placeholder="Afiliado" @bind="credencialOSDto.Afiliado" />
                            <input type="text" class="form-control mb-2" placeholder="CUIL" @bind="credencialOSDto.Cuil" />
                            <input type="text" class="form-control mb-2" placeholder="DU" @bind="credencialOSDto.DU" />
                            <input type="text" class="form-control mb-2" placeholder="Titular" @bind="credencialOSDto.Titular" />
                            <div class="d-flex justify-content-center">
                                <button @onclick="DownloadCredencial" class="btn btn-primary mb-4">
                                    <i class="fas fa-file-pdf"></i> Descargar
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="accordion" id="accordionColumn2">
            <!-- Acordeón 2 -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button @(IsSectionActive(2) ? "" : "collapsed")" type="button" @onclick="() => ToggleSection(2)" aria-expanded="@(IsSectionActive(2))" aria-controls="collapseTwo">
                        (Crendencial Sindicato)
                    </button>
                </h2>
                @if (IsSectionActive(2))
                {
                    <div id="collapseTwo" class="accordion-collapse collapse show" aria-labelledby="headingTwo" data-bs-parent="#accordionColumn2">
                        <div class="accordion-body border p-3">
                            <input type="text" class="form-control mb-2" placeholder="Campo 1" />
                            <input type="text" class="form-control mb-2" placeholder="Campo 2" />
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-primary">
                                    <i class="fas fa-download"></i> Descargar
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Segunda fila -->
<div class="row">
    <div class="col-md-6">
        <div class="accordion" id="accordionColumn3">
            <!-- Acordeón 3 -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button @(IsSectionActive(3) ? "" : "collapsed")" type="button" @onclick="() => ToggleSection(3)" aria-expanded="@(IsSectionActive(3))" aria-controls="collapseThree">
                        (Credencial Inspector)
                    </button>
                </h2>
                @if (IsSectionActive(3))
                {
                    <div id="collapseThree" class="accordion-collapse collapse show" aria-labelledby="headingThree" data-bs-parent="#accordionColumn3">
                        <div class="accordion-body border p-3">
                            <input type="text" class="form-control mb-2" placeholder="Campo 1" />
                            <input type="text" class="form-control mb-2" placeholder="Campo 2" />
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-primary">
                                    <i class="fas fa-download"></i> Descargar
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="accordion" id="accordionColumn4">
            <!-- Acordeón 4 -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFour">
                    <button class="accordion-button @(IsSectionActive(4) ? "" : "collapsed")" type="button" @onclick="() => ToggleSection(4)" aria-expanded="@(IsSectionActive(4))" aria-controls="collapseFour">
                        (Recibo)
                    </button>
                </h2>
                @if (IsSectionActive(4))
                {
                    <div id="collapseFour" class="accordion-collapse collapse show" aria-labelledby="headingFour" data-bs-parent="#accordionColumn4">
                        <div class="accordion-body border p-3">
                            <input type="text" class="form-control mb-2" placeholder="Número" @bind="reciboDto.Numero" />
                            <input type="text" class="form-control mb-2" placeholder="Fecha" @bind="reciboDto.Fecha" />
                            <input type="text" class="form-control mb-2" placeholder="Recibido" @bind="reciboDto.Recibido" />
                            <input type="text" class="form-control mb-2" placeholder="Domicilio" @bind="reciboDto.Domicilio" />
                            <input type="text" class="form-control mb-2" placeholder="CP" @bind="reciboDto.CP" />
                            <input type="text" class="form-control mb-2" placeholder="Localidad" @bind="reciboDto.Localidad" />
                            <input type="text" class="form-control mb-2" placeholder="Cantidad" @bind="reciboDto.Cantidad" />
                            <input type="text" class="form-control mb-2" placeholder="CUIT" @bind="reciboDto.CUIT" />
                            <input type="text" class="form-control mb-2" placeholder="Teléfono" @bind="reciboDto.Telefono" />
                            <input type="text" class="form-control mb-2" placeholder="EMP" @bind="reciboDto.EMP" />
                            <input type="text" class="form-control mb-2" placeholder="Tipo de Pago" @bind="reciboDto.TipoDePago" />
                            <input type="text" class="form-control mb-2" placeholder="Período" @bind="reciboDto.Periodo" />
                            <input type="text" class="form-control mb-2" placeholder="Ubicación" @bind="reciboDto.Ubicacion" />
                            <div class="d-flex justify-content-center">
                                <button @onclick="DownloadRecibo" class="btn btn-primary">
                                    <i class="fas fa-download"></i> Descargar
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    // Solo una sección activa a la vez
    private int? activeSection = null;

    private void ToggleSection(int sectionNumber)
    {
        if (activeSection == sectionNumber)
        {
            activeSection = null; // Cierra la sección si ya estaba abierta
        }
        else
        {
            activeSection = sectionNumber; // Abre la sección clickeada y cierra las demás
        }
    }

    private bool IsSectionActive(int sectionNumber) => activeSection == sectionNumber;
    // DTOs para los formularios
    private CredencialOSDto credencialOSDto = new();
    private ReciboDto reciboDto = new();
    private Task DownloadCredencial() => DownloadReporteGenerico("CredencialOS", credencialOSDto);

    private Task DownloadRecibo() => DownloadReporteGenerico("Recibo", reciboDto);

    private async Task DownloadReporteGenerico<TDto>(
        string nombreReporte,
        TDto parametros,
        string? nombreArchivo = null)
        where TDto : class
    {
        var queryParams = string.Join("&", parametros.ToDictionary()
            .Where(p => !string.IsNullOrEmpty(p.Value))
            .Select(p => $"{Uri.EscapeDataString(p.Key)}={Uri.EscapeDataString(p.Value)}"));

        string url = $"/download-report/{nombreReporte}?{queryParams}";

        await JS.InvokeVoidAsync("downloadFileFromUrl", url, nombreArchivo ?? $"{nombreReporte}.pdf");
    }

}
 